<Window x:Class="ProjectManagementApp.CreateProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создание проекта" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Поле для названия проекта -->
            <Label Content="Название проекта:" />
            <TextBox Name="txtProjectName" Width="200" Margin="0,0,0,10"/>

            <!-- Поле для пароля проекта -->
            <Label Content="Пароль проекта:" />
            <PasswordBox Name="pwdProjectPassword" Width="200" Margin="0,0,0,10"/>

            <!-- Поле для описания проекта -->
            <Label Content="Описание проекта:" />
            <TextBox Name="txtDescription" Width="200" Height="50" Margin="0,0,0,10"/>

            <!-- Поле для статуса проекта -->
            <Label Content="Статус проекта:" />
            <ComboBox Name="cmbStatus" Width="200" Margin="0,0,0,10">
                <ComboBoxItem Content="В работе" />
                <ComboBoxItem Content="Завершён" />
                <ComboBoxItem Content="Закрыт" />
                <ComboBoxItem Content="В заморозке" />
            </ComboBox>

            <!-- Кнопка создания проекта -->
            <Button Name="btnCreateProject" Content="Создать проект"
                    Width="200" Margin="0,10,0,0" Click="BtnCreateProject_Click"/>
            
            <!-- Кнопка назад -->
            <Button Name="btnBack" Content="Назад" 
                    Width="200" Margin="0,10,0,0" Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>