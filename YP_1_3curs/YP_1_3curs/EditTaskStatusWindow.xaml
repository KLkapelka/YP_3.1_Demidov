<Window x:Class="ProjectManagementApp.EditTaskStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Редактирование статуса задачи" Height="200" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Статус задачи:"/>
            <ComboBox Name="cmbStatus" Margin="0,5,0,10">
                <ComboBox.Items>
                    <sys:String>В ожидании</sys:String>
                    <sys:String>В работе</sys:String>
                    <sys:String>Завершена</sys:String>
                </ComboBox.Items>
            </ComboBox>
            <Button Name="btnSaveStatus" Content="Сохранить" Click="BtnSaveStatus_Click"/>
        </StackPanel>
    </Grid>
</Window>