<Window x:Class="ProjectManagementApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Поле для номера телефона -->
            <Label Content="Номер телефона:" />
            <TextBox Name="txtPhone" Width="200" Margin="0,0,0,10"/>
            <!-- Поле для пароля -->
            <Label Content="Пароль:" />
            <PasswordBox Name="pwdPassword" Width="200" Margin="0,0,0,10"/>
            <!-- Кнопка "Войти" -->
            <Button Name="btnLogin" Content="Войти" 
                    Width="200" Margin="0,10,0,0" Click="BtnLogin_Click"/>
            <!-- Кнопка назад -->
            <Button Name="btnBack" Content="Назад" 
                    Width="200" Margin="0,10,0,0" Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>