<Window x:Class="ProjectManagementApp.ProjectManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление проектом" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Заголовок проекта -->
            <Label Content="Управление проектом" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Список задач -->
            <Label Content="Список задач:" />
            <ListView Name="lstTasks" Width="500" Height="200" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название задачи" DisplayMemberBinding="{Binding TaskName}" Width="200"/>
                        <GridViewColumn Header="Статус" DisplayMemberBinding="{Binding Status}" Width="100"/>
                        <GridViewColumn Header="Ответственный" DisplayMemberBinding="{Binding AssignedTo}" Width="150"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Кнопки управления задачами -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnAddTask" Content="Добавить задачу" 
                        Width="120" Margin="0,10,10,0" Click="BtnAddTask_Click"/>
                <Button Name="btnEditTask" Content="Редактировать задачу" 
                        Width="120" Margin="0,10,10,0" Click="BtnEditTask_Click"/>
                <Button Name="btnDeleteTask" Content="Удалить задачу" 
                        Width="120" Margin="0,10,0,0" Click="BtnDeleteTask_Click"/>
            </StackPanel>
            
            <!-- Кнопки назад-->
            <Button Name="btnBack" Content="Назад" 
                    Width="200" Margin="0,10,0,0" Click="BtnBack_Click"/>
            
            <!-- Пользователи и роли-->
            <Button Name="btnViewUsers" Content="Пользователи и роли" 
                    Width="200" Margin="0,10,0,0" Click="BtnViewUsers_Click"/>
            
            <!-- Добавляем кнопку для отслеживания прогресса задач -->
            <Button Name="btnTaskProgress" Content="Прогресс задач" 
                    Width="200" Margin="0,10,0,0" Click="BtnTaskProgress_Click"/>
        </StackPanel>
    </Grid>
</Window>