<Window x:Class="ProjectManagementApp.ProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Проекты" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Кнопка "Создать проект" -->
            <Button Name="btnCreateProject" Content="Создать проект" 
                    Width="200" Margin="0,0,0,10" Click="BtnCreateProject_Click"/>
            <!-- Кнопка "Войти в проект" -->
            <Button Name="btnEnterProject" Content="Войти в проект" 
                    Width="200" Click="BtnEnterProject_Click"/>
            <!-- Кнопка "назад" -->
            <Button Name="btnBack" Content="Назад" 
                    Width="200" Margin="0,10,0,0" Click="BtnBack_Click"/>
        </StackPanel>
    </Grid>
</Window>