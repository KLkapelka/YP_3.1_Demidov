<Window x:Class="ProjectManagementApp.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Стартовая страница" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Кнопка "Вход" -->
            <Button Name="btnLogin" Content="Вход" 
                    Width="200" Margin="0,0,0,10" Click="BtnLogin_Click"/>
            
            <!-- Кнопка "Регистрация" -->
            <Button Name="btnRegister" Content="Регистрация" 
                    Width="200" Click="BtnRegister_Click"/>
        </StackPanel>
    </Grid>
</Window>