<Window x:Class="ProjectManagementApp.TaskProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Прогресс задач" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <!-- Заголовок -->
            <Label Content="Прогресс задач" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Статусы задач -->
            <StackPanel>
                <Label Content="В ожидании:"/>
                <TextBlock Name="txtPending" FontSize="14" Margin="10,0,0,0"/>
                
                <Label Content="В работе:"/>
                <TextBlock Name="txtInProgress" FontSize="14" Margin="10,0,0,0"/>
                
                <Label Content="Завершено:"/>
                <TextBlock Name="txtCompleted" FontSize="14" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Общий прогресс проекта -->
            <Label Content="Общий прогресс проекта:" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
            <ProgressBar Name="progressBar" Height="20" Margin="0,0,0,10"/>
            <TextBlock Name="txtProgressPercentage" FontSize="14" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>