<Window x:Class="ProjectManagementApp.UserRolesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Пользователи и роли" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Список пользователей и их ролей -->
            <ListView Name="lstUsers" Width="500" Height="300" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding FullName}" Width="200"/>
                        <GridViewColumn Header="Роль" DisplayMemberBinding="{Binding RoleName}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Кнопка "Назначить роль" -->
            <Button Name="btnAssignRole" Content="Назначить роль" 
                    Width="200" Margin="0,10,0,0" Click="BtnAssignRole_Click"/>
        </StackPanel>
    </Grid>
</Window>